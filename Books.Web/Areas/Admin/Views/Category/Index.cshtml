@model CategoryViewModel
@{
	ViewData["Title"] = "Category List";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h1 class="text-primary">@ViewData["Title"]</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Create New Category
			</a>
		</div>
	</div>
	<br /><br />

	<div class="p-4 border rounded">
		@if (Model.Categories.Count() > 0)
		{
			<table class="table table-striped border">
				<tr class="table-secondary">
					<th>
						Catgeory Name
					</th>
					<th>
						Display Order
					</th>
					<th></th>
				</tr>
				@foreach (var item in Model.Categories)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.DisplayOrder
						</td>
						<td>
							<div class="w-120 btn-group" role="group">
								<a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"
						   class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
						   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
							</div>

							@*<div class="text-center">
								<a href="/Admin/Category/Upsert/@item.Id" class="btn btn-success text-white"
								style="cursor:pointer">
								<i class="bi bi-pencil-square"></i> Edit
								</a>
								&nbsp;
								<button onclick='Delete("/Admin/Category/Delete/@item.Id")'
								class="btn btn-danger text-white" style="cursor:pointer">
								<i class="bi bi-trash-fill"></i> Delete
								</button>
								</div>*@
						</td>
					</tr>
				}
			</table>
			<div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="btn border"
			 page-class-normal="btn btn-light" page-class-selected="btn btn-info active"
			 class="btn-group float-right"></div>
			<br />
		}
		else
		{
			<p> No Categories Exists.</p>
		}
	</div>



